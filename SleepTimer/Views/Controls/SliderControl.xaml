<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SleepTimer.Views.Controls.SliderControl">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <VerticalStackLayout>
                
                <Label Text="{TemplateBinding Description}" />
                <Grid ColumnDefinitions="auto,auto,*">
                    <Label FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center" Margin="0,0,4,0"
                           Text="{TemplateBinding Value}" MinimumWidthRequest="25" HorizontalTextAlignment="End" />
                    <Label FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center"
                           Text="{TemplateBinding InlineText}"
                           Grid.Column="1" />
                    <Slider
                        Grid.Column="2"
                        Minimum="{TemplateBinding Minimum}"
                        Maximum="{TemplateBinding Maximum}"
                        Value="{TemplateBinding Value}"
                        VerticalOptions="Center" />
                </Grid>
                <BoxView Style="{StaticResource Separator}" />
            </VerticalStackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>

</ContentView>
