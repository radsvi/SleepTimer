<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SleepTimer.Views.Controls.ButtonRadialSelect">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid
                BackgroundColor="#1C1C1C"
                HeightRequest="50"
                HorizontalOptions="Fill"
                Padding="15,5,5,5"
                >
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnGridTapped"/>
                </Grid.GestureRecognizers>

                <HorizontalStackLayout>
                    <Label Text="{TemplateBinding Text}" VerticalOptions="Center" FontSize="15" />
                    <Label Text="{TemplateBinding MiddleTextField}" VerticalOptions="Center" FontSize="15" Margin="5,0,0,0" />
                </HorizontalStackLayout>
                <Label Text="{TemplateBinding RightTextField}" VerticalOptions="Center" HorizontalOptions="End" Margin="0,0,28,0" TextColor="{StaticResource Gray500}" />
                <Image Source="{StaticResource ChevronRight}" VerticalOptions="Center" HorizontalOptions="End" Margin="0,2,0,0" />
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
