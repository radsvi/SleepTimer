<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SleepTimer.Views.Controls"
             xmlns:viewModels="clr-namespace:SleepTimer.ViewModels"
             x:Class="SleepTimer.Views.RadialSliderPage"
             Title="{Binding Description}"
             x:DataType="viewModels:RadialSliderVM">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Ok"
            IconImageSource="{StaticResource ConfirmButton}"
            Order="Primary"
            Priority="0"
            Command="{Binding ConfirmSelectionCommand}" />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="9*,1*">
        <VerticalStackLayout>
            <Label
            Text="{Binding Subtitle}"
            Margin="5"
            TextColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDarkText}}"
            FontSize="16" />

            <controls:RadialSlider
            x:Name="MainRadialSlider"
            Margin="0,30,0,60"
            WidthRequest="{Binding SliderSize}"
            HeightRequest="{Binding SliderSize}"
            Minimum="0"
            FullTurnValue="{Binding FullTurnValue}"
            Units="{Binding Units}"
            Value="{Binding Value}" />
        </VerticalStackLayout>

        <Grid ColumnDefinitions="*,auto,*" Grid.Row="1" MinimumHeightRequest="50" ColumnSpacing="3">
            <Button Text="OK" Command="{Binding ConfirmSelectionCommand}" Grid.Column="0" Margin="5,0,0,0"  />
            <!--<Border BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" WidthRequest="1" Margin="0,5" StrokeThickness="0" Grid.Column="1" />-->
            <Button Text="Cancel" Command="{Binding CancelSelectionCommand}" Grid.Column="2" Margin="0,0,5,0" />
        </Grid>
    </Grid>
</ContentPage>