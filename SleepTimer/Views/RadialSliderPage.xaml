<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SleepTimer.Views.Controls"
             xmlns:viewModels="clr-namespace:SleepTimer.ViewModels"
             x:Class="SleepTimer.Views.RadialSliderPage"
             Title="{Binding Description}"
             x:DataType="viewModels:RadialSliderVM">
    <!--Pridat sem nejakej nadpis. Ten taky budu posilat
    
    -->
    <VerticalStackLayout>
        <controls:RadialSlider
            x:Name="MainRadialSlider"
            Margin="0,30,0,60"
            WidthRequest="{Binding SliderSize}"
            HeightRequest="{Binding SliderSize}"
            Minimum="0"
            Maximum="{Binding Maximum}"
            Units="{Binding Units}"
            Value="{Binding Value}" />

        <Grid ColumnDefinitions="*,*">
            <Button Text="OK" Command="{Binding ConfirmSelectionCommand}" Grid.Column="0" Margin="5" />
            <Button Text="Cancel" Command="{Binding CancelSelectionCommand}" Grid.Column="1" Margin="5" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>