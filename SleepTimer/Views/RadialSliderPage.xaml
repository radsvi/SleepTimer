<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SleepTimer.Views.Controls"
             x:Class="SleepTimer.Views.RadialSliderPage"
             Title="RadialSliderPage">
    <!--Pridat sem nejakej nadpis. Ten taky budu posilat
    Pomoci OnSizeAllocated budu muset alokovat SliderSize
    -->
    <controls:RadialSlider
        Margin="0,30,0,0"
        WidthRequest="{Binding SliderSize}"
        HeightRequest="{Binding SliderSize}"
        Minimum="0"
        Maximum="60"
        Value="123" />
</ContentPage>