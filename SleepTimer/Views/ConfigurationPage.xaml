<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:enums="clr-namespace:SleepTimer.Enums"
             xmlns:viewModels="clr-namespace:SleepTimer.ViewModels"
             xmlns:controls="clr-namespace:SleepTimer.Views.Controls"
             x:Class="SleepTimer.Views.ConfigurationPage"
             x:DataType="viewModels:ConfigurationVM"
             Title="Configuration Page">
    <VerticalStackLayout>
        <controls:SliderControl
            Description="Extension length:"
            InlineText="minutes"
            Value="{Binding AppPreferences.ExtensionLengthMinutes, Mode=TwoWay}"
            Minimum="0"
            Maximum="30" />

        <controls:SliderControl
            Description="Fade-out duration:"
            InlineText="seconds"
            Value="{Binding AppPreferences.FadeOutSeconds, Mode=TwoWay}"
            Minimum="0"
            Maximum="180" />

        <controls:ButtonRadialSelect
            Text="ASDF"
            Units="seconds"
            Value="{Binding AppPreferences.FadeOutSeconds, Mode=TwoWay}"
            Minimum="0"
            Maximum="180" />

        <controls:SliderControl
            Description="Standby (Wait time after fade-out):"
            InlineText="seconds"
            Value="{Binding AppPreferences.StandBySeconds, Mode=TwoWay}"
            Minimum="0"
            Maximum="120" />

        <controls:SwitchControl
            IsToggled="{Binding AppPreferences.DisplayVolumeChange, Mode=TwoWay}"
            Text="Show volume changes" />




        <controls:SwitchControl
            IsToggled="{Binding AppPreferences.LogWhenTimerFinishes, Mode=TwoWay}"
            Text="Log when timer finishes" />

        <Button
            IsVisible="{Binding AppPreferences.LogWhenTimerFinishes}"
            Text="Show logs"
            Command="{Binding MainVM.NavigateToPageCommand}" CommandParameter="{x:Static enums:Pages.SleepLogsPage}" />



        <!--<controls:NumberPicker Minimum="0" Maximum="59" Value="{Binding SelectedSeconds}" />-->

        
        
        
        
        <!--<Button Text="Back" Command="{Binding MainVM.NavigateToPageCommand}" CommandParameter="{x:Static enums:Pages.MainPage}" Margin="0,20,0,0" ImageSource="{StaticResource BackNavigationIcon}"/>-->

    </VerticalStackLayout>
</ContentPage>