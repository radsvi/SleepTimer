<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SleepTimer.ViewModels"
             x:Class="SleepTimer.Views.ConfigurationPage"
             x:DataType="viewModels:ConfigurationVM"
             Title="Configuration Page">
    <VerticalStackLayout>
        <Grid
            ColumnDefinitions="auto,*">
            <Label
                Text="{Binding AppPreferences.ExtensionLength, StringFormat='{0} minutes'}"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Margin="0,0,10,0"/>
            <Slider
                Grid.Column="1"
                Minimum="0"
                Maximum="60"
                Value="{Binding AppPreferences.ExtensionLength}"
                VerticalOptions="Center"
                />
        </Grid>
    </VerticalStackLayout>
</ContentPage>