<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:enums="clr-namespace:SleepTimer.Enums"
             xmlns:viewModels="clr-namespace:SleepTimer.ViewModels"
             xmlns:controls="clr-namespace:SleepTimer.Views.Controls"
             x:Class="SleepTimer.Views.ConfigurationPage"
             x:DataType="viewModels:ConfigurationVM"
             Title="Configuration Page">
    <VerticalStackLayout Margin="5">
        <Label Text="Extension length:" Margin="0,15,0,0" />
        <Grid
            ColumnDefinitions="auto,*">
            <Label
                Text="{Binding AppPreferences.ExtensionLength, StringFormat='{0} minutes'}"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Margin="0,0,10,0"/>
            <Slider
                Grid.Column="1"
                Minimum="0"
                Maximum="30"
                Value="{Binding AppPreferences.ExtensionLength}"
                VerticalOptions="Center"
                />
        </Grid>
        
        <Label Text="Fade-out duration:" Margin="0,15,0,0" />
        <Grid
            ColumnDefinitions="auto,*">
            <Label
                Text="{Binding AppPreferences.FadeOutDuration, StringFormat='{0} seconds'}"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Margin="0,0,10,0"/>
            <Slider
                Grid.Column="1"
                Minimum="0"
                Maximum="180"
                Value="{Binding AppPreferences.FadeOutDuration}"
                VerticalOptions="Center"
                />
        </Grid>
        
        <Label Text="Wait time after fade-out:" Margin="0,15,0,0" />
        <Grid
            ColumnDefinitions="auto,*">
            <Label
                Text="{Binding AppPreferences.WaitTimeAfterFadeOut, StringFormat='{0} seconds'}"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Margin="0,0,10,0"/>
            <Slider
                Grid.Column="1"
                Minimum="0"
                Maximum="120"
                Value="{Binding AppPreferences.WaitTimeAfterFadeOut}"
                VerticalOptions="Center"
                />
        </Grid>
        
        <controls:SwitchControl
            IsToggled="{Binding AppPreferences.DisplayVolumeChange, Mode=TwoWay}"
            Text="Show when volume changes" />

        <!--<controls:NumberPicker Minimum="0" Maximum="59" Value="{Binding SelectedSeconds}" />-->

        
        
        
        <Button Text="Back" Command="{Binding MainVM.NavigateToPageCommand}" CommandParameter="{x:Static enums:Pages.MainPage}" Margin="0,20,0,0" ImageSource="{StaticResource BackNavigationIcon}"/>

    </VerticalStackLayout>
</ContentPage>